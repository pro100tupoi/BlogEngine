@model RegisterRequest?

@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать</h1>
</div>

<h2>Форма регистрации пользователя</h2>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Login" class="control-label">Логин:</label>
        @Html.EditorFor(x => x.Login, new { htmlAttributes = new { @class = "form-control" } })
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div style="margin-bottom: 20px;"></div>

    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль:</label>
        @Html.PasswordFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div style="margin-bottom: 20px;"></div>

    <div class="form-group">
        <label asp-for="RepeatPassword" class="control-label">Повторите пароль:</label>
        @Html.PasswordFor(x => x.RepeatPassword, new { htmlAttributes = new { @class = "form-control" } })
        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
    </div>

    <div style="margin-bottom: 20px;"></div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-primary" />
        <a href="/home/authorization">Вернуться</a>
    </div>
    @if (Model != null)
    {
        <div class="alert alert-danger">
            Логин занят
        </div>
    }
</form>