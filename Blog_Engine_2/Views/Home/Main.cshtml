@using Blog_Engine_2.Objects
@model List<Post>
@{
    ViewData["Title"] = "Main";
}
<style>
    .blog-post {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .post-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .post-date {
        font-size: 16px;
        color: #666;
        margin-bottom: 20px;
    }

    .post-image {
        width: 100%;
        max-height: 700px;
        object-fit: contain;
        margin-bottom: 20px;
    }

    .post-content {
        font-size: 18px;
        line-height: 1.5;
        margin-bottom: 40px;
    }

    .actions {
        margin-top: 20px;
    }

    .actions button {
        margin-right: 10px;
    }
</style>

<h2>Главная</h2>
<div class="row mb-2">
    @foreach (var p in Model)
    {
        <div class="blog-post">
            <h2 class="post-title">@p.Header</h2>
            <p class="post-date">@p.UploadTime.ToString("dd.MM.yyyy hh:mm.ss")</p>
            @* <p class="post-author">@p.Avtor.Login</p> *@
            @if (p.Photo != null)
            {
                <img class="post-image" src="/home/pic/@p.Photo.Id" alt="Картинка поста">
            }
            <p class="post-content">@Html.Raw(p.Content)</p>
            <div class="actions">
                <button class="btn btn-primary" onclick="location.href='@Url.Action("PostEdit", "Home", new { id = p.Id })'">
                    <i class="fas fa-edit"></i> Редактировать
                </button>
                <button class="btn btn-danger" onclick="location.href='@Url.Action("PostPreDelete", "Home", new { id = p.Id })'">
                    <i class="fas fa-trash-alt"></i> Удалить
                </button>
            </div>
        </div>
    }
</div>
